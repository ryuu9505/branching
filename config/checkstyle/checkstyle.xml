<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- class name: PascalCase -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- variable name : camelCase -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- static variable name: capital and underbar -->
        <module name="StaticVariableName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <!-- class name in controller package -->
        <module name="Regexp">
            <property name="format" value="^.*Controller.*$"/>
            <property name="message" value="Class names in the controller package must contain 'Controller'"/>
            <property name="tokens" value="CLASS_DEF"/>
            <property name="packageNames" value=".*\\.controller$"/>
        </module>

        <!-- class name in service package -->
        <module name="Regexp">
            <property name="format" value="^.*Service.*$"/>
            <property name="message" value="Class names in the service package must end with 'Service' or 'ServiceImpl'"/>
            <property name="tokens" value="CLASS_DEF"/>
            <property name="packageNames" value=".*\\.service$"/>
        </module>

        <!-- order -->
        <module name="DeclarationOrder"/>

        <!-- Javadoc -->
        <module name="JavadocType"/>
        <module name="JavadocMethod">
            <property name="scope" value="public"/>
            <property name="allowMissingParamTags" value="false"/>
            <property name="allowMissingReturnTag" value="false"/>
            <property name="allowMissingThrowsTags" value="false"/>
        </module>

        <!-- single line blank between methods -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="false"/>
            <property name="allowMultipleEmptyLines" value="false"/>
            <property name="message" value="A single blank line should separate methods."/>
            <property name="tokens" value="METHOD_DEF,CTOR_DEF"/>
        </module>

        <!-- single blank line between methods and variables -->
        <module name="RegexpMultiline">
            <property name="format" value="\n{2,}"/>
            <property name="message" value="A single blank line should separate variables and methods."/>
            <property name="tokens" value="VARIABLE_DEF, METHOD_DEF"/>
        </module>

        <!-- single blank line at the end of a class -->
        <module name="RegexpMultiline">
            <property name="format" value="}\n{1}"/>
            <property name="message" value="A single blank line is required at the end of a class."/>
            <property name="tokens" value="CLASS_DEF"/>
        </module>
    </module>
</module>